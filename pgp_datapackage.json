      "name": "documents",
      "type": "table",
      "path": "data/documents.csv",
      "scheme": "file",
      "format": "csv",
      "mediatype": "text/csv",
      "encoding": "utf-8-sig",
      "schema": {
        "fields": [
          {
            "name": "pgpid",
            "type": "integer",
            "format": "default"
          },
          {
            "name": "url",
            "type": "string",
            "format": "uri",
            "description": "permalink; public view of this document on PGP website",
            "title": "URL"
          },
          {
            "name": "iiif_urls",
            "type": "string",
            "description": "URLs for one or more IIIF manifests, if available for associated fragments",
            "format": "default",
            "title": "IIIF URLs"
          },
          {
            "name": "fragment_urls",
            "type": "string",
            "description": "URLs to access associated fragments at owning library or museum site, if available",
            "format": "default",
            "title": "Fragment URLs"
          },
          {
            "name": "shelfmark",
            "type": "string",
            "constraints": {
              "required": true
            },
            "description": "shelfmark or combined shelfmarks for the fragments this document appears on",
            "format": "default",
            "title": "Shelfmark"
          },
          {
            "name": "multifragment",
            "type": "any",
            "format": "default"
          },
          {
            "name": "side",
            "type": "string",
            "description": "sides of associated fragments where this document appears",
            "format": "default",
            "title": "Side"
          },
          {
            "name": "region",
            "type": "string",
            "description": "label for region of fragment that document text occupies, for each associated fragment",
            "format": "default",
            "title": "Region"
          },
          {
            "name": "type",
            "type": "string",
            "description": "type of document",
            "format": "default",
            "title": "Document Type"
          },
          {
            "name": "tags",
            "type": "string",
            "description": "delimited list of tags describing the document",
            "format": "default",
            "title": "Tags"
          },
          {
            "name": "description",
            "type": "string",
            "description": "English-language text description summarizing the document",
            "format": "default",
            "title": "Description"
          },
          {
            "name": "scholarship_records",
            "type": "string",
            "description": "short citations for known scholarship about this document",
            "format": "default",
            "title": "Scholarship Records"
          },
          {
            "name": "shelfmarks_historic",
            "type": "string",
            "format": "default",
            "title": "Historic Shelfmarks",
            "description": "old and alternate ways of referring to this document"
          },
          {
            "name": "languages_primary",
            "type": "string",
            "description": "primary languages used in the text of this document",
            "format": "default",
            "title": "Primary Languages"
          },
          {
            "name": "languages_secondary",
            "type": "string",
            "description": "additional languages used in the text of this document",
            "format": "default",
            "title": "Secondary Languages"
          },
          {
            "name": "language_note",
            "type": "string",
            "description": "additional information about the languages or scripts used in this document",
            "format": "default",
            "title": "Language Notes"
          },
          {
            "name": "doc_date_original",
            "type": "string",
            "description": "the document's date in its original form",
            "format": "default",
            "title": "Date on Document"
          },
          {
            "name": "doc_date_calendar",
            "type": "string",
            "description": "calendar used in original document date",
            "format": "default",
            "title": "Calendar of Date on Document"
          },
          {
            "name": "doc_date_standard",
            "type": "string",
            "description": "date on document, standardized - CE date (Julian before 1582, Gregorian after 1582)",
            "format": "default",
            "title": "Standardized Document Date"
          },
          {
            "name": "inferred_date_display",
            "type": "string",
            "format": "default",
            "description": "scholar's inference of when document was composed",
            "title": "Inferred Dating of Document"
          },
          {
            "name": "inferred_date_standard",
            "type": "string",
            "format": "default",
            "title": "Inferred Dating of document, Standardized",
            "description": "scholar's dating inference, standardized to the CE"
          },
          {
            "name": "inferred_date_rationale",
            "type": "string",
            "format": "default",
            "title": "Inferred Date Rationale",
            "description": "why scholar makes the inferred date: paleography, person mentioned, etc."
          },
          {
            "name": "inferred_date_notes",
            "type": "string",
            "format": "default",
            "title": "Inferred Date Notes",
            "description": "further comments on scholar's choice for dating the document."
          },
          {
            "name": "initial_entry",
            "type": "datetime",
            "description": "date document was added to PGP",
            "format": "default",
            "title": "Initial Entry into PGP"
          },
          {
            "name": "last_modified",
            "type": "datetime",
            "description": "date document was last modified in PGP",
            "format": "default",
            "title": "Entry Last Modified"
          },
          {
            "name": "input_by",
            "type": "string",
            "description": "researchers who contributed to the metadata for this document",
            "format": "default",
            "title": "Input By"
          },
          {
            "name": "library",
            "type": "string",
            "description": "library location/ownership for associated fragments",
            "format": "default",
            "title": "Library"
          },
          {
            "name": "collection",
            "type": "string",
            "description": "library collection for associated fragments",
            "format": "default",
            "title": "Library Collection"
          },
          {
            "type": "boolean",
            "name": "has_transcription",
            "description": "boolean indicator if document has transcription available",
            "trueValues": [
              "Y"
            ],
            "falseValues": [
              "N"
            ],
            "constraints": {
              "required": true
            },
            "format": "default",
            "title": "Has Transcription"
          },
          {
            "type": "boolean",
            "name": "has_translation",
            "description": "boolean indicator if document has translation available",
            "trueValues": [
              "Y"
            ],
            "falseValues": [
              "N"
            ],
            "constraints": {
              "required": true
            },
            "format": "default",
            "title": "Has Translation"
          }
        ],
        "primaryKey": "pgpid",
        "missingValues": [
          ""
        ]
      },
      "profile": "tabular-data-resource"
    },
